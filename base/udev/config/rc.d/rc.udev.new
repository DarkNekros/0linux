#!/usr/bin/env bash

# On charge la configuration :
. /etc/udev/udev.conf

case "$1" in
	start)
		udevd --daemon
		udevadm trigger $OPT && /sbin/udevadm settle --timeout=120
	;;
	
	stop)
		killall udevd 
	;;
	
	restart)
		killall udevd
		sleep 1
		udevd --daemon
	;;
	
	*)
		echo "Utilisation : $0 {start|stop|restart}"
		exit 1
	;;

esac
