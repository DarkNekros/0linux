# Compilation :
CFLAGS="${FLAGS} $(pkg-config --cflags jack) -DHAVE_LIBJACK" CXXFLAGS="${FLAGS}" \
LIBS="$(pkg-config --libs jack)" \
./configure \
	--prefix=/usr \
	--sysconfdir=/etc \
	--localstatedir=/var \
	--libdir=/usr/lib${LIBDIRSUFFIX} \
