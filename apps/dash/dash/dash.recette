PKGCAT="apps/$(basename $(dirname $(pwd)))"
NAMESRC=${NAMESRC:-dash}
VERSION=${VERSION:-0.5.7}
EXT=${EXT:-tar.gz}
NAMETGZ=${NAMETGZ:-dash}
WGET=${WGET:-http://gondor.apana.org.au/~herbert/dash/files/$NAMESRC-$VERSION.$EXT}
DESC="Interpréteur (ou « shell ») léger alternatif à Bash et compatible POSIX"

. /usr/share/0outils/fonctions_paquets.sh

telecharger_sources
preparer_sources # À partir d'ici, on se trouve dans les sources décompactées.
cflags

# Compilation :
CFLAGS="${FLAGS}" CXXFLAGS="${FLAGS}" \
./configure \
	--prefix=/usr \
	--sysconfdir=/etc \
	--localstatedir=/var \
	--bindir=/usr/bin \
	--libdir=/usr/lib${LIBDIRSUFFIX} \
	--mandir=/usr/man \
	--infodir=/usr/info \
	--docdir=/usr/doc/${NAMETGZ}-${VERSION} \
	--build=${PKGARCH}-0linux-linux-gnu

make -j${JOBS} || make
