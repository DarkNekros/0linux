#!/usr/bin/env bash
# Voyez le fichier LICENCES pour connaître la licence de ce script.

PKGCAT="apps/kde/$(basename $(dirname $(pwd)))"
NAMESRC=${NAMESRC:-strigi}
VERSION=${VERSION:-0.7.8}
EXT=${EXT:-tar.bz2}
NAMETGZ=${NAMETGZ:-strigi}
WGET=${WGET:-http://www.vandenoever.info/software/$NAMESRC/$NAMESRC-$VERSION.$EXT}
DESC="Services et bibliothèques de recherche sur le bureau"
########################################

. /usr/share/0outils/fonctions_paquets.sh

telecharger_sources
preparer_sources # À partir d'ici, on se trouve dans les sources décompactées.
cflags

# Compilation :
mkdir -p build && cd build
CFLAGS="${FLAGS}" CXXFLAGS="${FLAGS}" \
cmake -D CMAKE_BUILD_TYPE=Release \
	-D CMAKE_SKIP_RPATH=OFF \
	-D CMAKE_INSTALL_PREFIX=/usr \
	-D BUILD_TESTS=OFF \
	-D ENABLE_SSE=ON \
	-D ENABLE_SSE2=ON \
	-D ENABLE_SSE3=ON \
	-D KDE4_BUILD_TESTS=FALSE \
	-D CMAKE_INSTALL_LIBDIR=lib${LIBDIRSUFFIX} \
	-D LIB_SUFFIX=${LIBDIRSUFFIX} \
	-D SYSCONF_INSTALL_DIR=/etc/kde \
	./ ../

make -j${JOBS} || make
fakeroot make install DESTDIR=${PKG}
cd ../

# On corrige une variable manquante empêchant la détection avec cmake :
sed -i "s@# install locations@# install location\nset_and_check(PACKAGE_PREFIX_DIR \"/usr\")@" \
	$PKG/usr/lib64/cmake/Strigi/StrigiConfig.cmake

installer_doc
creer_post_installation
stripper
empaqueter

# C'est fini.
