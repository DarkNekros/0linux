#!/usr/bin/env bash
# Voyez le fichier LICENCES pour connaître la licence de ce script.

PKGCAT="apps/$(basename $(dirname $(pwd)))"
NAMESRC=${NAMESRC:-lmms}
VERSION=${VERSION:-0.4.15}
EXT=${EXT:-tar.bz2}
NAMETGZ=${NAMETGZ:-lmms}
WGET=${WGET:-http://prdownloads.sourceforge.net/$NAMESRC/$NAMESRC-$VERSION.$EXT}
DESC="Boîte à rythmes multipiste avancée"
########################################

. /usr/share/0outils/fonctions_paquets.sh

telecharger_sources
preparer_sources # À partir d'ici, on se trouve dans les sources décompactées.
cflags

# On corrige un lien pour le greffon 'zynaddsubfx' :
cat $CWD/lmms.unlink.patch | patch -p1

# On définit la bibliothèque installée de STK :
STKLIB=$(find /usr/lib${LIBDIRSUFFIX} -type f -name "libstk.so.?.?.?" 2>/dev/null || true)

# Compilation :
mkdir -p build && cd build
CFLAGS="${FLAGS}" CXXFLAGS="${FLAGS}" \
cmake -D CMAKE_BUILD_TYPE=Release \
	-D CMAKE_SKIP_RPATH=OFF \
	-D CMAKE_INSTALL_LIBDIR=/usr/lib${LIBDIRSUFFIX} \
	-D CMAKE_INSTALL_PREFIX=/usr \
	-D STK_INCLUDE_DIR=/usr/include/stk \
	-D STK_LIBRARY=${STKLIB} \
	-USE=vst \
	../

make -j${JOBS} || make
fakeroot make install DESTDIR=${PKG}

cd ../

installer_doc
creer_post_installation
stripper
empaqueter

# C'est fini.
