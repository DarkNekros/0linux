#!/usr/bin/env bash
#
# /etc/rc.d/rc.httpd : fichier service pour Apache, nomm√© 'httpd'.
case "$1" in
	'start')
		apachectl -k start
	;;
	'stop')
		apachectl -k stop
		killall httpd
		rm -f /var/run/httpd/*.pid
	;;
	'restart')
		apachectl -k restart
	;;
	*)
		echo "Utilisation : $0 {start|stop|restart}"
	;;
esac
