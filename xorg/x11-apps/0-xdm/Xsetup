#!/bin/sh

# Fond noir :
xsetroot -solid "#000000" -cursor_name left_ptr

# Fond d'écran :
display -window root /usr/lib64/X11/xdm/0-xdm/background.png

# Les boutons d'extinction/redémarrage :
/usr/lib64/X11/xdm/0-xdm/buttons -geometry -0-0 &

# L'heure :
xclock -bg black -fg white &

## Un terminal :
# xconsole -daemon -geometry 640x200-0+0
