#!/usr/bin/env bash

start() {
	/usr/sbin/console-kit-daemon
}

stop() {
	if [ -f /var/run/ConsoleKit/pid ]; then
		kill -HUP $(cat /var/run/ConsoleKit/pid)
		rm -f /var/run/ConsoleKit/pid
	fi
}

case "$1" in
	'start')
		start
	;;
	'stop')
		stop
	;;
	'restart')
		stop
		start
	;;
	*)
		echo "Utilisation  $0 start|stop|restart"
esac
