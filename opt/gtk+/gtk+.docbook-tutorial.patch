From 4b885d5bcf3724a4fbb510de4efc547e56668a89 Mon Sep 17 00:00:00 2001
From: Gil Forcada <gforcada@gnome.org>
Date: Tue, 10 Aug 2010 15:30:14 +0200
Subject: [PATCH] Fix build issues on tutorial and faq

---
 docs/faq/Makefile.am      |    3 ++-
 docs/tutorial/Makefile.am |    3 ++-
 2 files changed, 4 insertions(+), 2 deletions(-)

diff --git a/docs/faq/Makefile.am b/docs/faq/Makefile.am
index f53c96c..46e22d0 100644
--- a/docs/faq/Makefile.am
+++ b/docs/faq/Makefile.am
@@ -9,7 +9,8 @@ html:
 	  (cd $(srcdir); \
 	   db2html gtk-faq.sgml; \
 	   test -d html && rm -r html; \
-	   mv gtk-faq html); \
+	   mkdir html; \
+	   mv *.html html); \
 	fi
 
 pdf:
diff --git a/docs/tutorial/Makefile.am b/docs/tutorial/Makefile.am
index 488e09d..4d0aa1a 100644
--- a/docs/tutorial/Makefile.am
+++ b/docs/tutorial/Makefile.am
@@ -42,7 +42,8 @@ html: gtk-tut.sgml
 	  (cd $(srcdir); \
 	   db2html gtk-tut.sgml; \
 	   test -d html && rm -r html; \
-	   mv gtk-tut html; \
+	   mkdir html; \
+	   mv *.html html; \
 	   mkdir html/images; \
 	   cp images/*.png html/images); \
 	fi
