#!/bin/sh
acpid_start() {
	if [ -x /usr/sbin/acpid -a -d /proc/acpi ]; then
		echo "Démarrage du démon ACPI : /usr/sbin/acpid &"
		/usr/sbin/acpid &
	fi
}

acpid_stop() {
	echo "Arrêt du démon ACPI..."
	killall acpid
}

acpid_restart() {
	echo "Redémarrage du démon ACPI..."
	acpid_stop
	sleep 1
	acpid_start
}

case "$1" in
	'start')
		acpid_start
	;;
	'stop')
		acpid_stop
	;;
	'restart')
		acpid_restart
	;;
	*)
		echo "Utilisation : $0 start|stop|restart"
esac
