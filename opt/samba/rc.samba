#!/usr/bin/env bash
samba_start() {
	if [ -x /usr/sbin/smbd -a -x /usr/sbin/nmbd -a -r /etc/samba/smb.conf ]; then
		smbd -D
		nmbd -D
	fi
}

samba_stop() {
	killall smbd nmbd
}

samba_restart() {
	samba_stop
	samba_start
}

case "$1" in
	'start')
		samba_start
	;;
	'stop')
		samba_stop
	;;
	'restart')
		samba_restart
	;;
	*)
		echo "Utilisation : $0 start|stop|restart"
esac
