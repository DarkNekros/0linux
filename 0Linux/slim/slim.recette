#!/usr/bin/env bash
# Voyez le fichier LICENCES pour connaître la licence de ce script.

NAMESRC=${NAMESRC:-slim}
VERSION=${VERSION:-1.3.5}
EXT=${EXT:-tar.gz}
NAMETGZ=${NAMETGZ:-slim}
WGET=${WGET:-http://download.berlios.de/$NAMESRC/$NAMESRC-$VERSION.$EXT}
DESC="Gestionnaire de connexion graphique simple et indépendant"

. /usr/share/0outils/fonctions_paquets.sh

telecharger_sources
preparer_sources # À partir d'ici, on se trouve dans les sources décompactées.
cflags

# On corrige un chemin pour le fichier service :
sed -i "s@usr/lib/systemd@/usr/lib${LIBDIRSUFFIX}/systemd@" CMakeLists.txt

# Compilation :
CFLAGS="${FLAGS}" CXXFLAGS="${FLAGS}" \
cmake \
	-DCMAKE_INSTALL_PREFIX=/usr \
	-DCMAKE_BUILD_TYPE=Release \
	-DLIB_DIR=/usr/lib${LIBDIRSUFFIX} \
	-DUSE_CONSOLEKIT=no \
	-DUSE_PAM=no

make -j${JOBS} || make
fakeroot make install DESTDIR=${PKG}

# On veille à ne rien écraser :
mv ${PKG}/etc/slim.conf{,.0nouveau}

# On crée le fichier d'actualisation des journaux :
mkdir ${PKG}/etc/logrotate.d
cat > ${PKG}/etc/logrotate.d/slim << "EOF"
/var/log/slim.log {
	compress
	rotate 1
	size 1024k
	notifempty
	missingok
	copytruncate
	noolddir
}

EOF

installer_doc
creer_post_installation
stripper
empaqueter

# C'est fini.
