EXT=tar.xz
NAMETGZ=yad
WGET=http://prdownloads.sourceforge.net/$NAMESRC-dialog/$NAMESRC-$VERSION.$EXT
DESC="Outil de création d'interfaces utilisateur, dérivé de Zenity"


telecharger_sources
