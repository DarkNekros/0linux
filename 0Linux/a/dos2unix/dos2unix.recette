#!/usr/bin/env bash
. /usr/share/0outils/fonctions_paquets.sh

NAMESRC=dos2unix
VERSION=6.0.4
EXT=tar.gz
NAMETGZ=dos2unix
WGET=http://prdownloads.sourceforge.net/$NAMESRC/$NAMESRC-$VERSION.$EXT
DESC="Permet la conversion des fins de ligne pour passer de DOS à Unix ou l'inverse"


telecharger_sources
preparer_sources # À partir d'ici, on se trouve dans les sources décompactées.
cflags

# Compilation :
RPM_OPT_FLAGS="${FLAGS}" make -j${JOBS} || RPM_OPT_FLAGS="${FLAGS}" make
fakeroot make install \
	prefix=$PKG/usr \
	docdir=$PKG/usr/doc/$PRGNAM-$VERSION \
	mandir=$PKG/usr/man

# On déplace les pages de man résiduelles :
mv $PKG/usr/share/man/* $PKG/usr/man
rmdir $PKG/usr/share/man

installer_doc
creer_post_installation
stripper
empaqueter

# C'est fini.
