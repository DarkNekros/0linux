#!/usr/bin/env bash
. /usr/share/0outils/fonctions_paquets.sh

NAMESRC=avogadro
VERSION=1.1.0
EXT=tar.bz2
NAMETGZ=avogadro
WGET=http://prdownloads.sourceforge.net/$NAMESRC/$NAMESRC-$VERSION.$EXT
DESC="Éditeur de molécules avancé"
########################################


telecharger_sources
preparer_sources # À partir d'ici, on se trouve dans les sources décompactées.
cflags

# Utilise la libgl2ps du système :
cat $CWD/avogadro.libgl2ps.patch | patch -p1

# Compilation :
mkdir -p build && cd build
CFLAGS="${FLAGS}" CXXFLAGS="${FLAGS}" \
cmake -D CMAKE_BUILD_TYPE=Release \
	-D CMAKE_SKIP_RPATH=ON \
	-D CMAKE_INSTALL_PREFIX=/usr \
	-D LIB_SUFFIX=${LIBDIRSUFFIX} \
	-D ENABLE_GLSL=ON \
	-D ENABLE_TESTS=OFF \
	-D ENABLE_THREADEDGL=ON \
	-D ENABLE_UPDATE_CHECKER=OFF \
	-D QT_MKSPECS_RELATIVE=share/qt/mkspecs \
        ./ ../

make -j${JOBS} || make
fakeroot make install DESTDIR=${PKG}
cd ../

installer_doc
creer_post_installation
stripper
empaqueter

# C'est fini.
