gnome-vfs \
caribou \
libgweather \
evolution-data-server \
gnome-shell \
gnome-shell-extensions \
gnome-control-center \
cheese \
cups-pk-helper \
empathy \
grilo \
grilo-plugins \
eog \
eog-plugins \
evince \
