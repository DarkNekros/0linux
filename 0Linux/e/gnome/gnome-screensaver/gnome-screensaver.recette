#!/usr/bin/env bash
# Voyez le fichier LICENCES pour connaître la licence de ce script.

NAMESRC=${NAMESRC:-gnome-screensaver}
VERSION=${VERSION:-3.6.1}
EXT=${EXT:-tar.xz}
NAMETGZ=${NAMETGZ:-gnome-screensaver}
WGET=${WGET:-http://ftp.acc.umu.se/pub/gnome/sources/$NAMESRC/$(echo $VERSION | cut -d'.' -f1-2)/$NAMESRC-$VERSION.$EXT}
DESC="Économiseurs d'écrans et écrans de veille pour GNOME"

. /usr/share/0outils/fonctions_paquets.sh

telecharger_sources
preparer_sources # À partir d'ici, on se trouve dans les sources décompactées.
cflags

# On corrige le comportement sans GDM en déplaçant un raccourci.
# Cf. https://bugzilla.gnome.org/show_bug.cgi?id=683060 :
sed -i 's@desktopdir = $(sysconfdir)/xdg/autostart@desktopdir = $(datadir)/applications@' src/Makefile.am
sed -i '/AutostartCondition=GNOME3 if-session gnome-fallback/d' src/gnome-screensaver.desktop.in.in

# Compilation :
autoreconf -vif
CFLAGS="${FLAGS}" CXXFLAGS="${FLAGS}" \
./configure \
	--prefix=/usr \
	--sysconfdir=/etc \
	--localstatedir=/var \
	--libdir=/usr/lib${LIBDIRSUFFIX} \
	--libexecdir=/usr/lib${LIBDIRSUFFIX}/${NAMESRC} \
	--mandir=/usr/man \
	--infodir=/usr/info \
	--docdir=/usr/doc/${NAMETGZ}-${VERSION} \
	--disable-schemas-compile \
	--build=${PKGARCH}-0linux-linux-gnu 

make -j${JOBS} || make
fakeroot make install DESTDIR=${PKG}

installer_doc
creer_post_installation
stripper
empaqueter

# C'est fini.
