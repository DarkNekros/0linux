#!/usr/bin/env bash
. /usr/share/0outils/fonctions_paquets.sh

VERSION=1.14
EXT=tar.bz2
WGET=http://dl.cihar.com/$NAMESRC/$NAMESRC-$VERSION.$EXT
DESC="Convertisseur et détecteur d'encodages"


telecharger_sources
preparer_sources # À partir d'ici, on se trouve dans les sources décompactées.
cflags

# Compilation :
CFLAGS="${FLAGS}" CXXFLAGS="${FLAGS}" \
./configure \
	--prefix=/usr \
	--sysconfdir=/etc \
	--localstatedir=/var \
	--libdir=/usr/lib${LIBDIRSUFFIX} \
	--libexecdir=/usr/lib${LIBDIRSUFFIX}/${NAMESRC} \
	--mandir=/usr/man \
	--infodir=/usr/info \
	--docdir=/usr/doc/${NAMETGZ}-${VERSION} \
	--enable-external \
	--build=${PKGARCH}-0linux-linux-gnu

# On force la création de liens symboliques :
sed -i 's/ln -s/ln -sf/g' $(find . -type f -name "Makefile")

make -j${JOBS} || make
fakeroot make install DESTDIR=${PKG}

installer_doc
creer_post_installation
stripper
empaqueter

# C'est fini.
