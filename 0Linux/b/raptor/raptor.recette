WGET=(http://librdf.org/dist/source/raptor-1.4.21.$EXT
     http://librdf.org/dist/source/$NAMESRC-$VERSION.$EXT
    )
DESC="Bibliothèques d'analyse XML/RDF"


telecharger_sources
cflags

