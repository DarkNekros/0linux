#!/usr/bin/env bash
. /usr/share/0outils/fonctions_paquets.sh

NAMESRC=${NAMESRC:-libiodbc}
VERSION=${VERSION:-3.52.9}
EXT=${EXT:-tar.gz}
NAMETGZ=${NAMETGZ:-libiodbc}
WGET=${WGET:-http://prdownloads.sourceforge.net/iodbc/$NAMESRC-$VERSION.$EXT}
DESC="Bibliothèques de base de données ODBC"


telecharger_sources
preparer_sources # À partir d'ici, on se trouve dans les sources décompactées.
cflags

# Compilation :
CFLAGS="${FLAGS}" CXXFLAGS="${FLAGS}" \
./configure \
	--prefix=/usr \
	--sysconfdir=/etc \
	--localstatedir=/var \
	--libdir=/usr/lib${LIBDIRSUFFIX} \
	--libexecdir=/usr/lib${LIBDIRSUFFIX}/${NAMETGZ} \
	--mandir=/usr/man \
	--infodir=/usr/info \
	--docdir=/usr/doc/${NAMETGZ}-${VERSION} \
	--with-iodbc-inidir=/etc/iodbc \
	--build=${PKGARCH}-0linux-linux-gnu

