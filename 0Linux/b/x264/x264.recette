CFLAGS="${FLAGS} -O3" CXXFLAGS="${FLAGS} -O3" \
./configure \
	--prefix=/usr \
	--libdir=/usr/lib${LIBDIRSUFFIX} \
	--enable-shared

make -j${JOBS} || make

fakeroot make install bindir=/usr/bin \
	libdir=/usr/lib${LIBDIRSUFFIX} \
	includedir=/usr/include \
	DESTDIR=${PKG}

