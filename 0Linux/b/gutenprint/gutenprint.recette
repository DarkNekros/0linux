#!/usr/bin/env bash
. /usr/share/0outils/fonctions_paquets.sh

NAMESRC=gutenprint
VERSION=5.2.9
EXT=tar.bz2
NAMETGZ=gutenprint
WGET=http://prdownloads.sourceforge.net/gimp-print/$NAMESRC-$VERSION.$EXT
DESC="Ensemble de pilotes d'impression"


telecharger_sources
preparer_sources # À partir d'ici, on se trouve dans les sources décompactées.
cflags

# Compilation :
CFLAGS="${FLAGS}" CXXFLAGS="${FLAGS}" \
./configure \
	--prefix=/usr \
	--sysconfdir=/etc \
	--localstatedir=/var \
	--libdir=/usr/lib${LIBDIRSUFFIX} \
	--mandir=/usr/man \
	--infodir=/usr/info \
	--docdir=/usr/doc/${NAMETGZ}-${VERSION} \
	--disable-samples \
	--with-cups \
	--with-gimp2 \
	--build=${PKGARCH}-0linux-linux-gnu

make -j${JOBS} || make
fakeroot make install DESTDIR=${PKG}

installer_doc

# On complète la documentation :
mv ${PKG}/usr/share/${NAMESRC}/doc/* ${PKG}/usr/doc/${NAMETGZ}-${VERSION}
rmdir ${PKG}/usr/share/${NAMESRC}/doc

creer_post_installation
stripper
empaqueter

# C'est fini.
